	$JS_TMP .= '}';	

	$JS_TMP .= 'function MODAL_A_PRINCIPAL_Procesar(){';
		$JS_TMP .= 'if($("#A_PRINCIPAL_FORM")[0].reportValidity()==false){return;}';
		$JS_TMP .= 'FormErrorReset("A_PRINCIPAL_FORM");';
		$JS_TMP .= '$.ajax({url: "'.$LINK_BACK.'/Procesar_Liquidacion/",data: JSON.stringify(FormDataPicker("A_PRINCIPAL_FORM"))}).done(function (response){';
			$JS_TMP .= 'if(response.RESULTADO == "OK"){';
				$JS_TMP .= 'TableLoad("A");';
				$JS_TMP .= 'MODAL_A_PRINCIPAL_INSTANCE.hide();';
				$JS_TMP .= SF('OK');
				$JS_TMP .= 'var NewTab = window.open("'.$URL['API'].'ViandasHaberes/Ver_Excel/" + $("#MODAL_A_PRINCIPAL #DESDE").val() + "/" + $("#MODAL_A_PRINCIPAL #HASTA").val() + "/" + $("#MODAL_A_PRINCIPAL #DESCUENTO").val() + "/" + Math.floor(Math.random() * (99999 - 10000) + 10000) , "_blank");';
