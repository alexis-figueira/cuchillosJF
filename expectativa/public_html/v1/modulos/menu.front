$RETURN = '';

function BTN_Menu($Nombre, $Icono, $Color, $Link){
	$RETURN = '<a class="btn-main" class="text-dark" href="'.$Link.'">';
		$RETURN .= '<div class="btn-main-div rounded-4 " style="background-color:#'.$Color.';">';
			$RETURN .= '<i class="fa-solid '.$Icono.' fa-3x"></i>';
			$RETURN .= '<span class="btn-main-span text-light text-decoration-none">'.$Nombre.'</span>';
		$RETURN .= '</div>';
	$RETURN .= '</a>';
	
	return $RETURN;
}

